<div class="user_show center-align">
  <h1>Login</h1>
  <%if flash[:notice]%>
    <div class="notice"><%=flash[:notice]%></div>
  <%end%>

  <%= form_for(:session, url:login_path) do |f| %>
    <div class='input-field'>
      <%=f.label :email, "Email:"%>
      <%=f.email_field :email%>
   </div>
   <div class='input-field'>
      <%=f.label :password, "Password:"%>
     <%=f.password_field :password%>
   </div>
   <%=f.submit "log in"%>
  <%end%>

<p><%=link_to "Don't have an account? Sign up!", register_path%></p>
</div>
