  <%if flash[:notice]%>
    <div class="notice"><%=flash[:notice]%></div>
  <%end%>

<div class="url-form">
  <%=form_for @article do |f|%>
  <div class="row">
    <div class='input-field col s10 offset-5'>
      <span class="flow-text">
        <%=f.label :url, "Article URL"%>
        <%=f.text_field :url %>
      </span>
    </div>
    <%=f.submit "Read", class:"btn waves-effect waves-orange offset-1"%>
  </div>
  <%end%>
</div>
<br>

  <div class="center-align audio-player">
    <audio id="player" src="#" controls="controls" autoplay="true"></audio>
  </div>
<br>

<div id="your-articles">
  <h4 class="center-align">Recently Added</h4>
  <h3> history</h3>
  <%@history.each do |user_article|%>
    <div class="article">
    
      <div class="link btn-floating center-align play-pause">
        <a class="play" data-url=<%=user_article.article.audio.track.url%> ><i class="material-icons">play_arrow</i></a>
      </div>
      <div class="link btn-floating center-align inactive">
        <a class="pause" data-url=<%=user_article.article.audio.track.url%>><i class="material-icons">pause</i></a>
      </div>
      <h4><%=user_article.article.title%></h4>
      <div class="link btn wave-effect">
        <%=link_to "remove", user_article_path(user_article), method: :delete%>
      </div>
      <div class='link btn show-text'>
        <a id=<%= user_article.article.id %>>text</a>
      </div>

      <div class='inactive text-scroll-container'>
        <span><%= user_article.article.text %></span>
      </div>

    </div>
  <%end%>
