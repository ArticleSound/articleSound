<%if flash[:notice]%>
  <div class="notice"><%=flash[:notice]%></div>
<%end%>

<div class="url-form" id="url-form">
  <div id="url-error" style></div>
  <%=form_for @article do |f|%>
  <div class="row">
    <div class='input-field col s10 offset-5'>
      <span class="flow-text">
        <%=f.label :url, "Article URL"%>
        <%=f.text_field :url %>
      </span>
    </div>
    <%=f.submit "Read", class:"btn offset-1", id:"read-button"%>
  </div>
  <%end%>
</div>
<br>

  <div class="center-align audio-player">
    <audio id="player" src="http://s3.amazonaws.com/articlesound/audios/tracks/000/000/003/original/article8.ogg?1469492310" controls="controls" autoplay="true"></audio>
  </div>
<br>

<div id="your-articles" class="row">
  <div class="col s6" id="history">
    <h5 class="center-align"> history</h5>
    <%= render 'history', locals: { queue: @history } %>
  </div>


  <div class='col s6' id="queue">
    <h5 class="center-align">queue</h5>
    <%= render 'queue', locals: { queue: @queue } %>
  </div>

</div>
